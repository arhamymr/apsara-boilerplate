{
  "id": "access-control",
  "version": "1.0.0",
  "name": "Access Control",
  "description": "Role-based access control (RBAC) with permissions for admin and user roles",
  "apps": ["web", "backend"],
  "features": ["roles", "permissions", "route-protection", "api-authorization"],
  "requires": ["auth"],
  "optionalFor": ["dashboard", "blog", "cms"],
  "config": {
    "web": {
      "dependencies": [],
      "devDependencies": []
    },
    "backend": {
      "dependencies": [],
      "devDependencies": []
    }
  },
  "exposes": {
    "web": {
      "components": ["RoleGuard", "PermissionGuard", "AdminOnly"],
      "hooks": ["useRole", "usePermission", "useHasPermission"],
      "types": ["Role", "Permission", "RolePermissions"]
    },
    "backend": {
      "routes": [],
      "middleware": ["requireRole", "requirePermission", "requireAdmin"],
      "services": ["accessControlService"]
    }
  }
}
